@article{etesamiContributionArbuscularMycorrhizal2021,
  title = {Contribution of {{Arbuscular Mycorrhizal Fungi}}, {{Phosphate}}\textendash{{Solubilizing Bacteria}}, and {{Silicon}} to {{P Uptake}} by {{Plant}}},
