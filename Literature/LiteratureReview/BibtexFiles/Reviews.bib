@article{smithFreshPerspectivesRoles2012,
  title = {Fresh Perspectives on the Roles of Arbuscular Mycorrhizal Fungi in Plant Nutrition and Growth},
  author = {Smith, Sally E. and Smith, F. Andrew},
  year = {2012},
  month = jan,
  journal = {Mycologia},
