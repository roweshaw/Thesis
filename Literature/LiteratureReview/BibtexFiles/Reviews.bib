  file = {/home/shawna/Dropbox/zotero_library/etesami_et_al_2021_contribution_of_arbuscular_mycorrhizal_fungi,_phosphate–solubilizing_bacteria,.pdf}
}

@article{ferrolReviewArbuscularMycorrhizas2019,
  title = {Review: {{Arbuscular}} Mycorrhizas as Key Players in Sustainable Plant Phosphorus Acquisition: {{An}} Overview on the Mechanisms Involved},
