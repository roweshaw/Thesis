  langid = {english},
  keywords = {ammonium,arginine,interface,mycorrhiza,nitrate,nutrient transport,organic nitrogen,periarbuscular membrane,phosphate,plant microbe interaction},
  file = {/home/shawna/Dropbox/zotero_library/bucking_kafle_2015_role_of_arbuscular_mycorrhizal_fungi_in_the_nitrogen_uptake_of_plants_-_current.pdf}
