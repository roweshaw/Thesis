@article{Resendis-Antonio2007,
  title = {Metabolic Reconstruction and Modeling of Nitrogen Fixation in {{Rhizobium}} Etli},
  author = {{Resendis-Antonio}, Osbaldo and Reed, Jennifer L. and Encarnaci{\'o}n, Sergio and {Collado-Vides}, Julio and Palsson, Bernhard},
  year = {2007},
  journal = {PLoS Computational Biology},
  volume = {3},
